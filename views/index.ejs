<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>
    <div class="header">
      <h1>Messages</h1>
    </div>
    <div class="message-part">
      <% for(let i = 0; i < messages.length; i++) { %>
      <div class="message">
        <p>User: <%= messages[i].user %></p>
        <p>Text: <%= messages[i].text %></p>
        <p>Added: <%= messages[i].added %></p>
        <button><a href= <%=`/messages/${i}`%> >Open</a></button>
      </div>
      <% } %>
    </div>
    <div class="add">
      <button><a href="/new">Add</a></button>
    </div>
  </body>
</html>
